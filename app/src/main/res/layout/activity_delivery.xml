<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_delivery_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/mainscreen_toolbar"
        android:elevation="7dp"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:titleTextColor="@android:color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start">

            <TextView
                android:id="@+id/txt_logo"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:text="@string/dr_tv_delivery"
                android:textColor="@color/text_color_white"
                android:textSize="18sp" />

        </RelativeLayout>

    </android.support.v7.widget.Toolbar>


    <ScrollView
        android:id="@+id/sv_delivery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar_delivery_main">

        <RelativeLayout
            android:id="@+id/rl_delivery_main_scroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <android.support.percent.PercentRelativeLayout
                android:id="@+id/rl_delivery_user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v7.widget.CardView
                    android:id="@+id/cv_et_delivery_user_fname"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginEnd="1dp"
                    android:layout_marginRight="1dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardCornerRadius="0dp"
                    app:cardElevation="4dp"
                    app:cardMaxElevation="4dp"
                    app:layout_widthPercent="50%">

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/tin_et_delivery_user_fname"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColorHint="@color/text_color_hint">

                        <EditText
                            android:id="@+id/edt_et_delivery_user_fname"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:digits="0123456789 qwertyuiopasdfghjklzxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM"
                            android:ellipsize="start"
                            android:gravity="clip_horizontal"
                            android:hint="@string/delivery_first_name_hint"
                            android:inputType="text"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:textColor="@color/text_black_color"
                            android:textColorHint="@color/text_color_hint"
                            android:textSize="15sp"
                            app:et_supportSingleLine="true" />

                    </android.support.design.widget.TextInputLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/cv_et_delivery_user_lname"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="1dp"
                    android:layout_marginStart="1dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:lines="1"
                    app:cardCornerRadius="0dp"
                    app:cardElevation="4dp"
                    app:cardMaxElevation="4dp"
                    app:layout_widthPercent="50%">

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/tin_et_delivery_user_lname"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColorHint="@color/text_color_hint">

                        <EditText
                            android:id="@+id/edt_et_delivery_user_lname"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:digits="0123456789 qwertyuiopasdfghjklzxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM"
                            android:ellipsize="start"
                            android:gravity="clip_horizontal"
                            android:hint="@string/delivery_last_name_hint"
                            android:inputType="text"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:textColor="@color/text_black_color"
                            android:textColorHint="@color/text_color_hint"
                            android:textSize="15sp" />

                    </android.support.design.widget.TextInputLayout>

                </android.support.v7.widget.CardView>

            </android.support.percent.PercentRelativeLayout>

            <android.support.v7.widget.CardView
                android:id="@+id/cv_et_delivery_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rl_delivery_user_name"
                android:layout_marginTop="15dp"
                android:background="?android:attr/selectableItemBackground"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="0dp"
                app:cardElevation="4dp"
                app:cardMaxElevation="4dp">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/tin_et_delivery_address"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColorHint="@color/text_color_hint">

                    <EditText
                        android:id="@+id/edt_et_delivery_address"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:ellipsize="start"
                        android:gravity="clip_horizontal"
                        android:hint="@string/delivery_address_hint"
                        android:inputType="text"
                        android:maxLines="1"
                        android:textColor="@color/text_black_color"
                        android:textColorHint="@color/text_color_hint"
                        android:textSize="15sp" />

                </android.support.design.widget.TextInputLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cv_et_delivery_phone_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/cv_et_delivery_address"
                android:layout_marginTop="15dp"
                android:background="?android:attr/selectableItemBackground"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="0dp"
                app:cardElevation="4dp"
                app:cardMaxElevation="4dp">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/tin_et_delivery_phone_number"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColorHint="@color/text_color_hint">

                    <EditText
                        android:id="@+id/edt_et_delivery_phone_number"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:ellipsize="start"
                        android:gravity="clip_horizontal"
                        android:hint="@string/phone_number"
                        android:inputType="phone"
                        android:maxLines="1"
                        android:textColor="@color/text_black_color"
                        android:textColorHint="@color/text_color_hint"
                        android:textSize="15sp" />

                </android.support.design.widget.TextInputLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cv_et_delivery_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/cv_et_delivery_phone_number"
                android:layout_marginTop="15dp"
                android:background="?android:attr/selectableItemBackground"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="0dp"
                app:cardElevation="4dp"
                app:cardMaxElevation="4dp">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/tin_et_delivery_city"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColorHint="@color/text_color_hint">

                    <EditText
                        android:id="@+id/edt_et_delivery_city"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:ellipsize="start"
                        android:gravity="clip_horizontal"
                        android:hint="@string/delivery_city_hint"
                        android:inputType="text"
                        android:maxLines="1"
                        android:textColor="@color/text_black_color"
                        android:textColorHint="@color/text_color_hint"
                        android:textSize="15sp" />

                </android.support.design.widget.TextInputLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cv_et_delivery_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/cv_et_delivery_city"
                android:layout_marginTop="15dp"
                android:background="?android:attr/selectableItemBackground"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="0dp"
                app:cardElevation="4dp"
                app:cardMaxElevation="4dp">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/tin_et_delivery_state"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColorHint="@color/text_color_hint">

                    <EditText
                        android:id="@+id/edt_et_delivery_state"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:ellipsize="start"
                        android:gravity="clip_horizontal"
                        android:hint="@string/delivery_state_hint"
                        android:inputType="text"
                        android:maxLines="1"
                        android:textColor="@color/text_black_color"
                        android:textColorHint="@color/text_color_hint"
                        android:textSize="15sp" />

                </android.support.design.widget.TextInputLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cv_et_delivery_country"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/cv_et_delivery_state"
                android:layout_marginTop="15dp"
                android:background="?android:attr/selectableItemBackground"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="0dp"
                app:cardElevation="4dp"
                app:cardMaxElevation="4dp">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/tin_et_delivery_country"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColorHint="@color/text_color_hint">

                    <EditText
                        android:id="@+id/edt_et_delivery_country"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:ellipsize="start"
                        android:gravity="clip_horizontal"
                        android:hint="@string/delivery_country_hint"
                        android:inputType="text"
                        android:maxLines="1"
                        android:textColor="@color/text_black_color"
                        android:textColorHint="@color/text_color_hint"
                        android:textSize="15sp" />

                </android.support.design.widget.TextInputLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cv_et_delivery_zip_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/cv_et_delivery_country"
                android:layout_marginTop="15dp"
                android:background="?android:attr/selectableItemBackground"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="0dp"
                app:cardElevation="4dp"
                app:cardMaxElevation="4dp">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/tin_et_delivery_zip_code"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColorHint="@color/text_color_hint">

                    <EditText
                        android:id="@+id/edt_et_delivery_zip_code"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:ellipsize="start"
                        android:gravity="clip_horizontal"
                        android:hint="@string/delivery_zip_code_hint"
                        android:inputType="phone"
                        android:maxLines="1"
                        android:textColor="@color/text_black_color"
                        android:textColorHint="@color/text_color_hint"
                        android:textSize="15sp" />

                </android.support.design.widget.TextInputLayout>

            </android.support.v7.widget.CardView>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>