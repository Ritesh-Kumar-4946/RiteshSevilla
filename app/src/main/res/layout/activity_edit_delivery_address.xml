                </RelativeLayout>-->

            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:id="@+id/cv_address_spineer_user_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/cv_address_spineer_user_country"
                android:layout_marginTop="15dp"
                android:background="?android:attr/selectableItemBackground"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="5dp"
                app:cardElevation="3dp"
                app:cardMaxElevation="3dp">

                <RelativeLayout
                    android:id="@+id/rl_address_spineer_user_state"
                    android:layout_width="50dp"
                    android:layout_height="60dp"
                    android:layout_centerVertical="true"
                    android:paddingBottom="15dp"
                    android:paddingEnd="15dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingStart="15dp"
                    android:paddingTop="25dp">

                    <ImageView
                        android:id="@+id/iv_address_spineer_user_state"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/ic_state"
                        android:contentDescription="@string/login_email_user" />

                </RelativeLayout>

                <com.jaredrummler.materialspinner.MaterialSpinner
                    android:id="@+id/spinner_user_state"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_marginStart="50dp"
                    android:textSize="15sp"
                    app:ms_dropdown_height="wrap_content"
                    app:ms_dropdown_max_height="200dp"
                    app:ms_hide_arrow="false" />

