<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_delivery_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/mainscreen_toolbar"
        android:elevation="7dp"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:titleTextColor="@android:color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start">

            <TextView
                android:id="@+id/txt_logo"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:text="@string/dr_tv_delivery"
                android:textColor="@color/text_color_white"
                android:textSize="18sp" />

        </RelativeLayout>

    </android.support.v7.widget.Toolbar>


    <ScrollView
        android:id="@+id/sv_delivery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar_delivery_main"
        android:layout_marginBottom="80dp">

        <RelativeLayout
            android:id="@+id/rl_delivery_main_scroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <android.support.v7.widget.CardView
                android:id="@+id/cv_et_address_user_first_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="?android:attr/selectableItemBackground"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="5dp"
                app:cardElevation="3dp"
                app:cardMaxElevation="3dp">

                <RelativeLayout
                    android:id="@+id/rl_et_address_user_first_name"
                    android:layout_width="50dp"
                    android:layout_height="60dp"
                    android:layout_centerVertical="true"
                    android:paddingBottom="15dp"
                    android:paddingEnd="15dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingStart="15dp"
                    android:paddingTop="25dp">

                    <ImageView
                        android:id="@+id/iv_et_address_user_first_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/ic_user"
                        android:contentDescription="@string/login_email_user" />

                </RelativeLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/tin_et_address_user_first_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="50dp"
                    android:layout_marginStart="50dp"
                    android:textColorHint="@color/text_color_hint">

                    <EditText
                        android:id="@+id/edt_et_address_user_first_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:ellipsize="start"
                        android:gravity="clip_horizontal"
                        android:hint="@string/user_first_name"
                        android:inputType="text"
                        android:maxLines="1"
                        android:textColor="@color/text_black_color"
                        android:textColorHint="@color/text_color_hint"
                        android:textSize="15sp" />

                </android.support.design.widget.TextInputLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cv_et_address_user_last_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/cv_et_address_user_first_name"
                android:layout_marginTop="15dp"
                android:background="?android:attr/selectableItemBackground"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="5dp"
                app:cardElevation="3dp"
                app:cardMaxElevation="3dp">

                <RelativeLayout
                    android:id="@+id/rl_et_address_user_last_name"
                    android:layout_width="50dp"
                    android:layout_height="60dp"
                    android:layout_centerVertical="true"
                    android:paddingBottom="15dp"
                    android:paddingEnd="15dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingStart="15dp"
                    android:paddingTop="25dp">

                    <ImageView
                        android:id="@+id/iv_et_address_user_last_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/ic_user"
                        android:contentDescription="@string/login_email_user" />

                </RelativeLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/tin_et_address_user_last_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="50dp"
                    android:layout_marginStart="50dp"
                    android:textColorHint="@color/text_color_hint">

                    <EditText
                        android:id="@+id/edt_et_address_user_last_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:ellipsize="start"
                        android:gravity="clip_horizontal"
                        android:hint="@string/user_last_name"
                        android:inputType="text"
                        android:maxLines="1"
                        android:textColor="@color/text_black_color"
                        android:textColorHint="@color/text_color_hint"
                        android:textSize="15sp" />

                </android.support.design.widget.TextInputLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cv_et_address_user_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/cv_et_address_user_last_name"
                android:layout_marginTop="15dp"
                android:background="?android:attr/selectableItemBackground"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="5dp"
                app:cardElevation="3dp"
                app:cardMaxElevation="3dp">

                <RelativeLayout
                    android:id="@+id/rl_et_address_user_address"
                    android:layout_width="50dp"
                    android:layout_height="60dp"
                    android:layout_centerVertical="true"
                    android:paddingBottom="15dp"
                    android:paddingEnd="15dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingStart="15dp"
                    android:paddingTop="25dp">

                    <ImageView
                        android:id="@+id/iv_et_address_user_address"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/ic_street_address"
                        android:contentDescription="@string/login_email_user" />

                </RelativeLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/tin_et_address_user_address"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="50dp"
                    android:layout_marginStart="50dp"
                    android:textColorHint="@color/text_color_hint">

                    <EditText
                        android:id="@+id/edt_et_address_user_address"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:ellipsize="start"
                        android:gravity="clip_horizontal"
                        android:hint="@string/user_street_address"
                        android:inputType="text"
                        android:maxLines="1"
                        android:textColor="@color/text_black_color"
                        android:textColorHint="@color/text_color_hint"
                        android:textSize="15sp" />

                </android.support.design.widget.TextInputLayout>

            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:id="@+id/cv_et_address_phone_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/cv_et_address_user_address"
                android:layout_marginTop="15dp"
                android:background="?android:attr/selectableItemBackground"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="5dp"
                app:cardElevation="3dp"
                app:cardMaxElevation="3dp">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp">
                    <!--https://github.com/dlukashev/android-phone-number-with-flags-->
                    <!--https://github.com/dlukashev/android-phone-number-with-flags-->
                    <!--https://github.com/dlukashev/android-phone-number-with-flags-->

                    <LinearLayout
                        android:id="@+id/ll_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Spinner
                            android:id="@+id/spinner"
                            android:layout_width="wrap_content"
                            android:layout_height="41dp"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/edit_box_drop_selector"
                            android:dropDownWidth="200dp" />

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/tin_et_address_phone_number"
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            android:layout_marginLeft="0dp"
                            android:layout_marginRight="0dp"
                            android:layout_weight="1"
                            android:inputType="phone"
                            android:paddingLeft="10dp"
                            android:textColorHint="@color/text_color_hint">

                            <EditText
                                android:id="@+id/et_address_phone"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:ellipsize="start"
                                android:gravity="clip_horizontal"
                                android:hint="@string/phone_number"
                                android:inputType="phone"
                                android:maxLines="1"
                                android:textColor="@color/text_black_color"
                                android:textColorHint="@color/text_color_hint"
                                android:textSize="15sp" />

                        </android.support.design.widget.TextInputLayout>


                    </LinearLayout>

                    <Button
                        android:id="@+id/btn_send"
                        android:layout_width="match_parent"
                        android:layout_height="54dp"
                        android:layout_below="@id/ll_phone"
                        android:layout_marginTop="20dp"
                        android:gravity="center"
                        android:text="Send"
                        android:textSize="20sp"
                        android:visibility="gone" />

                </RelativeLayout>


            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:id="@+id/cv_address_spineer_user_country"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/cv_et_address_phone_number"
                android:layout_marginTop="15dp"
                android:background="?android:attr/selectableItemBackground"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="5dp"
                app:cardElevation="3dp"
                app:cardMaxElevation="3dp">

                <RelativeLayout
                    android:id="@+id/rl_address_spineer_user_country"
