<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_single_product_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/mainscreen_toolbar"
        android:elevation="7dp"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:titleTextColor="@android:color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start">

            <TextView
                android:id="@+id/tv_sub_category_single_item_tv"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:text="@string/tv_toolbar_subcategory_name"
                android:textColor="@color/text_color_white"
                android:textSize="18sp" />


            <!--cart imageview (Start)-->
            <RelativeLayout
                android:id="@+id/rl_cart_icon_sub_category_single_product"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="2dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="2dp"
                android:padding="10dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/ic_cart" />

            </RelativeLayout>
            <!--cart imageview (End)-->

            <!--cartitem badge counter (Start)-->
            <RelativeLayout
                android:id="@+id/rl_badgeview_cart_item_sub_category_single_product"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/badge_bg"
                android:visibility="visible">

                <TextView
                    android:id="@+id/tv_badge_counter_sub_category_single_product"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/tv_add_cart_total_items"
                    android:textColor="@color/text_color_white"
                    android:textSize="12sp" />

            </RelativeLayout>
            <!--cartitem badge counter (End)-->


            <!--cart imageview (Start)-->
            <RelativeLayout
                android:id="@+id/rl_cart_icon_sub_category_single_product_click"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="2dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="2dp"
                android:padding="5dp"
                android:visibility="gone">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/ic_cart" />

            </RelativeLayout>
            <!--cart imageview (End)-->

            <!--cartitem badge counter (Start)-->
            <RelativeLayout
                android:id="@+id/rl_badgeview_cart_item_sub_category_single_product_click"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/badge_bg"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_badge_counter_sub_category_single_product_click"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/tv_add_cart_total_items"
                    android:textColor="@color/text_color_white"
                    android:textSize="12sp" />

            </RelativeLayout>
            <!--cartitem badge counter (End)-->


        </RelativeLayout>

    </android.support.v7.widget.Toolbar>

