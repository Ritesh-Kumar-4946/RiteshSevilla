<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_my_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/mainscreen_toolbar"
        android:elevation="7dp"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:titleTextColor="@android:color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start">

            <TextView
                android:id="@+id/tv_my_address"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:text="@string/tv_toolbar_address"
                android:textColor="@color/text_color_white"
                android:textSize="18sp" />

        </RelativeLayout>

    </android.support.v7.widget.Toolbar>


    <RelativeLayout
        android:id="@+id/rl_address_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar_my_address"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_my_address_text"
            android:textColor="@color/main_color_dark"
            android:textSize="20sp"
            android:textStyle="bold" />

    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_address_text"
        android:layout_marginBottom="100dp"
        android:layout_marginTop="20dp">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <android.support.v7.widget.CardView
                android:id="@+id/cv_my_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="?android:attr/selectableItemBackground"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="4dp"
                app:cardElevation="2dp"
                app:cardMaxElevation="2dp">


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


                    <RelativeLayout
                        android:id="@+id/rl_my_address_user_f_name_text"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp">

                        <TextView
                            android:id="@+id/tv_my_address_user_f_name_text"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_margin="10dp"
                            android:text="@string/tv_my_address_user_f_name_text"
                            android:textColor="@color/main_color_dark"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/tv_my_address_user_f_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_margin="10dp"
                            android:layout_toEndOf="@id/tv_my_address_user_f_name_text"
                            android:ellipsize="end"
                            android:ems="3"
                            android:lines="1"
                            android:text="@string/tv_my_address_user_f_name"
                            android:textAlignment="viewStart"
                            android:textColor="@color/text_color_black"
                            android:textSize="15sp" />

                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/rl_my_address_user_l_name_text"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_below="@id/rl_my_address_user_f_name_text">

                        <TextView
                            android:id="@+id/tv_my_address_user_l_name_text"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_margin="10dp"
                            android:text="@string/tv_my_address_user_l_name_text"
                            android:textColor="@color/main_color_dark"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/tv_my_address_user_l_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_margin="10dp"
                            android:layout_toEndOf="@id/tv_my_address_user_l_name_text"
                            android:ellipsize="end"
                            android:ems="3"
                            android:lines="1"
                            android:text="@string/tv_my_address_user_l_name"
                            android:textAlignment="viewStart"
                            android:textColor="@color/text_color_black"
                            android:textSize="15sp" />

                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/rl_my_address_user_phone_text"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_below="@id/rl_my_address_user_l_name_text">

                        <TextView
                            android:id="@+id/tv_my_address_user_phone_text"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_margin="10dp"
                            android:text="@string/tv_my_address_user_phone_text"
                            android:textColor="@color/main_color_dark"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/tv_my_address_user_phone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_margin="10dp"
                            android:layout_toEndOf="@id/tv_my_address_user_phone_text"
                            android:ellipsize="end"
                            android:ems="3"
                            android:lines="1"
                            android:text="@string/tv_my_address_user_phone_no"
                            android:textAlignment="viewStart"
                            android:textColor="@color/text_color_black"
                            android:textSize="15sp" />

                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/rl_my_address_user_address_text"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_below="@id/rl_my_address_user_phone_text">

                        <TextView
                            android:id="@+id/tv_my_address_user_address_text"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_margin="10dp"
                            android:text="@string/tv_my_address_user_address_text"
                            android:textColor="@color/main_color_dark"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/tv_my_address_user_address"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_margin="10dp"
                            android:layout_toEndOf="@id/tv_my_address_user_address_text"
                            android:ellipsize="end"
                            android:ems="3"
                            android:lines="1"
                            android:text="@string/tv_my_address_user_address"
                            android:textAlignment="viewStart"
                            android:textColor="@color/text_color_black"
                            android:textSize="15sp" />

                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/rl_my_address_user_country_text"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_below="@id/rl_my_address_user_address_text">

                        <TextView
                            android:id="@+id/tv_my_address_user_country_text"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_margin="10dp"
                            android:text="@string/tv_my_address_user_country_text"
                            android:textColor="@color/main_color_dark"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/tv_my_address_user_country"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_margin="10dp"
                            android:layout_toEndOf="@id/tv_my_address_user_country_text"
                            android:ellipsize="end"
                            android:ems="3"
                            android:lines="1"
                            android:text="@string/tv_my_address_user_country"
                            android:textAlignment="viewStart"
                            android:textColor="@color/text_color_black"
                            android:textSize="15sp" />

                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/rl_my_address_user_state_text"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_below="@id/rl_my_address_user_country_text">

                        <TextView
                            android:id="@+id/tv_my_address_user_state_text"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_margin="10dp"
                            android:text="@string/tv_my_address_user_state_text"
                            android:textColor="@color/main_color_dark"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/tv_my_address_user_state"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_margin="10dp"
                            android:layout_toEndOf="@id/tv_my_address_user_state_text"
                            android:ellipsize="end"
                            android:ems="3"
                            android:lines="1"
                            android:text="@string/tv_my_address_user_state"
                            android:textAlignment="viewStart"
                            android:textColor="@color/text_color_black"
                            android:textSize="15sp" />

                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/rl_my_address_user_city_text"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_below="@id/rl_my_address_user_state_text">

                        <TextView
                            android:id="@+id/tv_my_address_user_city_text"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_margin="10dp"
                            android:text="@string/tv_my_address_user_city_text"
                            android:textColor="@color/main_color_dark"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/tv_my_address_user_city"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_margin="10dp"
                            android:layout_toEndOf="@id/tv_my_address_user_city_text"
                            android:ellipsize="end"
                            android:ems="3"
                            android:lines="1"
                            android:text="@string/tv_my_address_user_city"
                            android:textAlignment="viewStart"
                            android:textColor="@color/text_color_black"
                            android:textSize="15sp" />

                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/rl_my_address_user_zip_text"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_below="@id/rl_my_address_user_city_text">

                        <TextView
                            android:id="@+id/tv_my_address_user_zip_text"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_margin="10dp"
                            android:text="@string/tv_my_address_user_zip_text"
                            android:textColor="@color/main_color_dark"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/tv_my_address_user_zip"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_margin="10dp"
                            android:layout_toEndOf="@id/tv_my_address_user_zip_text"
                            android:ellipsize="end"
                            android:ems="3"
                            android:lines="1"
                            android:text="@string/tv_my_address_user_zip"
                            android:textAlignment="viewStart"
                            android:textColor="@color/text_color_black"
                            android:textSize="15sp" />

                    </RelativeLayout>


                </RelativeLayout>


            </android.support.v7.widget.CardView>


            <!--<RelativeLayout
                android:id="@+id/rl_edit_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/cv_my_address">

                <ImageView
                    android:id="@+id/iv_edit_address"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/ic_edit_address" />

                <TextView
                    android:id="@+id/tv_edit_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_toEndOf="@id/iv_edit_address"
                    android:text="@string/tv_my_address_edit_address" />

            </RelativeLayout>-->

        </RelativeLayout>


    </ScrollView>


    <android.support.v7.widget.CardView
        android:id="@+id/cv_my_address_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="15dp"
        android:layout_marginTop="15dp"
        android:background="?android:attr/selectableItemBackground"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="0dp"
        app:cardElevation="4dp"
        app:cardMaxElevation="4dp">

        <RelativeLayout
            android:id="@+id/rl_my_address_confirm_btn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/login_email">

            <TextView
                android:id="@+id/tv_my_address_confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center_vertical"
                android:text="@string/tv_my_address_confirm"
                android:textColor="@color/text_color_white"
                android:textSize="18sp" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:id="@+id/cv_my_address_confirm_pressed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="18dp"
        android:background="?android:attr/selectableItemBackground"
        android:foreground="?android:attr/selectableItemBackground"
        android:padding="10dp"
        android:visibility="gone"
        app:cardCornerRadius="0dp"
        app:cardElevation="4dp"
        app:cardMaxElevation="4dp">

        <RelativeLayout
            android:id="@+id/rl_my_address_confirm_btn_pressed"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/login_email">

            <TextView
                android:id="@+id/tv_my_address_confirm_pressed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center_vertical"
                android:text="@string/tv_my_address_confirm"
                android:textColor="@color/text_color_white"
                android:textSize="18sp" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>


    <RelativeLayout
        android:id="@+id/rl_my_address_progress"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerInParent="true"
        android:padding="3dp"
        android:visibility="gone">

        <fr.castorflex.android.circularprogressbar.CircularProgressBar
            android:id="@+id/cpb_my_address"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:indeterminate="true"
            android:indeterminateOnly="false"
            app:cpb_colors="@array/gplus_colors" />

    </RelativeLayout>

    <com.rey.material.widget.FloatingActionButton
        android:id="@+id/fab_edit_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="70dp"
        app:fab_backgroundAnimDuration="@integer/cpb_default_max_sweep_angle"
        app:fab_backgroundColor="@color/mainscreen_toolbar"
        app:fab_elevation="3dp"
        app:fab_iconSize="30dp"
        app:fab_iconSrc="@drawable/ic_edit_address" />

</RelativeLayout>