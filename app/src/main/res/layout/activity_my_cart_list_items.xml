<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <android.support.v7.widget.CardView
        android:id="@+id/cv_my_cart_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="0dp"
        app:cardElevation="2dp"
        app:cardMaxElevation="2dp">

        <RelativeLayout
            android:id="@+id/rl_my_cart_single_product_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <RelativeLayout
                android:id="@+id/rl_my_cart_single_product_image"
                android:layout_width="100dp"
                android:layout_height="100dp">

                <ImageView
                    android:id="@+id/iv_my_cart_item"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_centerInParent="true"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/the_app_guru" />


                <RelativeLayout
                    android:id="@+id/rl_my_cart_grid_item_image_progress"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    android:padding="3dp"
                    android:visibility="visible">

                    <fr.castorflex.android.circularprogressbar.CircularProgressBar
                        android:id="@+id/cpb_my_cart_grid_item_image_progressbar_circular"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:indeterminate="true"
                        android:indeterminateOnly="false"
                        app:cpb_colors="@array/gplus_colors" />

                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_single_product_item_discription"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_toEndOf="@id/rl_my_cart_single_product_image">

                <RelativeLayout
                    android:id="@+id/rl_my_cart_single_product_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_my_cart_single_product_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:ellipsize="end"
                        android:ems="3"
                        android:gravity="center_vertical"
                        android:lines="2"
                        android:text="@string/tv_subcategory_product_list_tittle"
                        android:textColor="@color/tv_sub_category_product_list_items"
                        android:textSize="15sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/rl_my_cart_single_product_name">


                    <TextView
                        android:id="@+id/tv_sub_category_product_discription"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical"
                        android:text="@string/tv_my_cart_product_quantity"
                        android:textColor="@color/tv_sub_category_product_list_items"
                        android:textSize="14sp" />


                    <android.support.v7.widget.CardView
                        android:id="@+id/cv_item_quantity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_toEndOf="@id/tv_sub_category_product_discription"
                        android:layout_toRightOf="@id/tv_sub_category_product_discription"
                        android:background="?android:attr/selectableItemBackground"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:cardCornerRadius="0dp"
                        app:cardElevation="7dp"
                        app:cardMaxElevation="7dp">

                        <RelativeLayout
                            android:layout_width="30dp"
                            android:layout_height="30dp">

                            <TextView
                                android:id="@+id/tv_item_quantity_number"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:text="@string/tv_subcategory_single_product_quantity_number"
                                android:textColor="@color/tv_sub_category_product_list_items"
                                android:textSize="15sp" />

                        </RelativeLayout>

                    </android.support.v7.widget.CardView>

                </RelativeLayout>


            </RelativeLayout>


        </RelativeLayout>

    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:id="@+id/cv_sub_category_item_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cv_my_cart_top"
        android:layout_marginTop="1dp"
        android:background="?android:attr/selectableItemBackground"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="0dp"
        app:cardElevation="2dp"
        app:cardMaxElevation="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/tv_my_cart_single_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="@string/tv_subcategory_product_price"
                android:textColor="@color/text_black_color"
                android:textSize="18sp"
                android:textStyle="bold" />

        </RelativeLayout>


    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:id="@+id/cv_my_cart_delivery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cv_sub_category_item_description"
        android:layout_marginTop="1dp"
        android:background="?android:attr/selectableItemBackground"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="0dp"
        app:cardElevation="2dp"
        app:cardMaxElevation="2dp">

        <RelativeLayout
            android:id="@+id/rl_my_cart_delivery_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <RelativeLayout
                android:id="@+id/rl_my_cart_delivery_text"
                android:layout_width="100dp"
                android:layout_height="100dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/tv_my_cart_delivery_text" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_my_cart_delivery_options"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_toRightOf="@id/rl_my_cart_delivery_text">

                <TextView
                    android:id="@+id/tv_my_cart_delivery_charges"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/tv_my_cart_delivery_charges"
                    android:textColor="@color/text_black_color"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/tv_my_cart_delivery_charges">


                    <TextView
                        android:id="@+id/tv_my_cart_delivery_date_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical"
                        android:text="@string/tv_my_cart_delivery_time_text"
                        android:textColor="@color/tv_sub_category_product_list_items"
                        android:textSize="14sp" />


                    <TextView
                        android:id="@+id/tv_my_cart_delivery_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_my_cart_delivery_date_text"
                        android:layout_marginEnd="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="1dp"
                        android:gravity="center_vertical"
                        android:text="@string/tv_my_cart_delivery_time"
                        android:textColor="@color/tv_sub_category_product_list_items"
                        android:textSize="15sp" />

                </RelativeLayout>


            </RelativeLayout>


        </RelativeLayout>

    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:id="@+id/cv_my_cart_remove_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cv_my_cart_delivery"
        android:layout_marginTop="1dp"
        android:background="?android:attr/selectableItemBackground"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="0dp"
        app:cardElevation="3dp"
        app:cardMaxElevation="3dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp">

                <ImageView
                    android:id="@+id/iv_my_cart_delete_item"
                    android:layout_width="30dp"
                    android:layout_height="20dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_delet_item" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/iv_my_cart_delete_item"
                    android:layout_toRightOf="@id/iv_my_cart_delete_item"
                    android:text="@string/tv_my_cart_remove_item"
                    android:textColor="@color/text_black_color"
                    android:textSize="15sp" />

            </RelativeLayout>

        </RelativeLayout>


    </android.support.v7.widget.CardView>


</RelativeLayout>